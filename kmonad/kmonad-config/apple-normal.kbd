(defcfg
    ;;For MacOS
    input (iokit-name)

    output (kext)

    ;; Comment this is you want unhandled events not to be emitted
    fallthrough true

    ;; Set this to false to disable any command-execution in KMonad
    allow-cmd true
)

(defsrc 
    caps 
        lmet rmet
)

(defalias
    met_tab (tap-hold-next-release 200 tab lmet)
    met_enter (tap-hold-next-release 200 enter rmet)
)

(deflayer homerowmods
  esc 
       @met_tab @met_enter
)

